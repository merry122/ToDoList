<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="miniProject.TaskController"
            style="-fx-background-color: #F5F5DC;">

    <children>
        <!-- Main Layout -->
        <HBox spacing="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <!-- Sliding Sidebar -->
            <StackPane fx:id="sidebarContainer" prefWidth="200" style="-fx-background-color: #2E8B57;">
                <VBox alignment="CENTER" spacing="15" prefWidth="200" visible="true"
                      style="-fx-background-color: #2E8B57;">
                    <Button fx:id="TaskDisplayButton" text="Display" onAction="#handleDisplayButtonAction"
                            style="-fx-background-color: #F5F5DC; -fx-text-fill: #2E8B57; -fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-padding: 8px;" />

                    <Button fx:id="BackToAddItemButton" text="Back" onAction="#handleBackToAddItem"
                            style="-fx-background-color: #F5F5DC; -fx-text-fill: #2E8B57; -fx-font-family: 'Arial'; -fx-font-size: 14px; -fx-padding: 8px;" />
                </VBox>
            </StackPane>

            <!-- Content Area -->
            <VBox alignment="CENTER" spacing="15" HBox.hgrow="ALWAYS"
                  style="-fx-padding: 20;">
                <!-- Hamburger Menu Button -->
                <Button fx:id="burgerMenuButton" text="â˜°" onAction="#toggleSidebar" alignment="TOP_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: #2E8B57; -fx-font-size: 20px; -fx-padding: 5px;" />

                <!-- Title -->
                <Text fx:id="Tasktext" text="New Task!" wrappingWidth="400"
                      style="-fx-fill: #2E8B57; -fx-font-family: 'Yu Gothic UI Semibold'; -fx-font-size: 36px;" />

                <!-- Task Input -->
                <TextField fx:id="TaskNewTask" promptText="Task name" maxWidth="400.0"
                           style="-fx-background-color: #F5F5DC; -fx-border-color: #2E8B57; -fx-border-radius: 5px; -fx-padding: 5px;" />

                <!-- Date Picker -->
                <DatePicker fx:id="TaskDateTask" promptText="Due date" maxWidth="400.0"
                            style="-fx-background-color: #F5F5DC; -fx-border-color: #2E8B57; -fx-border-radius: 5px; -fx-padding: 5px;" />

                <!-- Description Area -->
                <TextArea fx:id="TaskNewDescription" promptText="Add description" maxWidth="400.0" maxHeight="100.0"
                          style="-fx-background-color: #F5F5DC; -fx-border-color: #2E8B57; -fx-border-radius: 5px; -fx-padding: 5px;" />

                <!-- Add Button -->
                <Button fx:id="TaskAddButton" text="Add" onAction="#handleTaskAddButton"
                        style="-fx-background-color: #2E8B57; -fx-text-fill: #F5F5DC; -fx-font-family: 'Arial'; -fx-font-size: 16px; -fx-padding: 8px;" />
            </VBox>
        </HBox>
    </children>
</AnchorPane>
