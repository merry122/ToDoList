<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="miniProject.DisplayTaskController"
            style="-fx-background-color: #F5F5DC;">

    <children>
        <Label text="Task List" layoutX="20" layoutY="20"
               style="-fx-font-size: 24px; -fx-font-family: 'Yu Gothic UI Semibold'; -fx-text-fill: #2E8B57;" />

        <TextField fx:id="searchField" promptText="Search by Task ID" layoutX="20" layoutY="60" prefWidth="300"
                   style="-fx-background-color: #F5F5DC; -fx-border-color: #2E8B57; -fx-border-radius: 5px;" />
        <Button fx:id="searchButton" text="Search" layoutX="330" layoutY="60"
                style="-fx-background-color: #2E8B57; -fx-text-fill: #F5F5DC; -fx-padding: 8px;" />
        <Button fx:id="sortByDueDateButton" text="Sort by Due Date" layoutX="420" layoutY="60"
                style="-fx-background-color: #2E8B57; -fx-text-fill: #F5F5DC; -fx-padding: 8px;" />
        <Button fx:id="editButton" text="Edit" layoutX="570" layoutY="60"
                style="-fx-background-color: #FFD700; -fx-text-fill: #2E8B57; -fx-padding: 8px;" />
        <Button fx:id="deleteButton" text="Delete" layoutX="650" layoutY="60"
                style="-fx-background-color: #8B0000; -fx-text-fill: #F5F5DC; -fx-padding: 8px;" />

        <TableView fx:id="tasksTable" layoutX="20" layoutY="100" prefWidth="700" prefHeight="350"
                   style="-fx-background-color: #F5F5DC; -fx-border-color: #2E8B57; -fx-border-radius: 5px;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250" />
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="150" />
                <TableColumn fx:id="completedColumn" text="Completed" prefWidth="100" />
            </columns>
        </TableView>

        <Button fx:id="backButton" text="Back" layoutX="20" layoutY="470"
                style="-fx-background-color: #2E8B57; -fx-text-fill: #F5F5DC; -fx-padding: 8px;" />
    </children>
</AnchorPane>
