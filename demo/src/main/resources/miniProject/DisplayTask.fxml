<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="miniProject.DisplayTaskController">
    <children>
        <!-- Label for the tasks list -->
        <Label layoutX="10" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;">
            <text>Task List</text>
        </Label>

        <!-- Search Section -->
        <TextField fx:id="searchField" promptText="Search by Task ID" layoutX="10" layoutY="40" prefWidth="300" />
        <Button fx:id="searchButton" text="Search" layoutX="320" layoutY="40"
                style="-fx-font-size: 14px; -fx-background-color: #4caf50; -fx-text-fill: white;"
                onAction="#handleSearchAction" />
        <!-- Sort by Due Date Button -->
        <Button fx:id="sortByDueDateButton" text="Sort" layoutX="400" layoutY="40"
                style="-fx-font-size: 14px; -fx-background-color: #4caf50; -fx-text-fill: white;"
                onAction="#handleSortByDueDateAction" />
        <!-- Edit Button -->
        <Button fx:id="editButton" text="Edit" layoutX="520" layoutY="40"
                style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;"
                onAction="#handleEditAction" />
        <Button fx:id="deleteButton" text="Delete Task" layoutX="620" layoutY="40"
                style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;"
                onAction="#handleDeleteAction" />


        <!-- TableView for displaying tasks -->
        <TableView fx:id="tasksTable" layoutX="10" layoutY="80" prefWidth="700" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250" />
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100" />
                <TableColumn fx:id="completedColumn" text="Completed" prefWidth="100" />
            </columns>
        </TableView>

        <!-- Back Button -->
        <Button fx:id="backButton" text="Back to Task Page" layoutX="10" layoutY="490"
                style="-fx-font-size: 14px; -fx-background-color: #4caf50; -fx-text-fill: white;"
                onAction="#handleBackAction" />
    </children>
</AnchorPane>
