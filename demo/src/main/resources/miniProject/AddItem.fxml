<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="411.0" prefWidth="620.0"
            style="-fx-background-color: #FAF3E0;" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="miniProject.AddItemController">
    <!-- Side Panel with ToDo title -->
    <AnchorPane style="-fx-background-color: #2e8b57;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" prefWidth="220.0">
        <children>
            <Label alignment="CENTER" layoutX="26.0" layoutY="14.0" prefHeight="91.0" prefWidth="165.0" text="ToDo" textFill="#FAF3E0">
                <font>
                    <Font name="Yu Gothic UI Semibold" size="50.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>

    <!-- Main Content Area -->
    <Label fx:id="AddItemLabel" alignment="CENTER" text="No tasks yet!" textFill="#2E7D32"
           AnchorPane.topAnchor="111.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="10.0">
        <font>
            <Font name="Yu Gothic UI Semibold" size="28.0" />
        </font>
    </Label>

    <!-- Add Task Button -->
    <Button fx:id="AddItemButton" mnemonicParsing="false" onAction="#handleAddTaskAction" text="Add Task" textFill="#FAF3E0"
            style="-fx-background-color: #2e8b57; -fx-background-radius: 20; -fx-border-color: #FAF3E0; -fx-border-width: 2; -fx-border-radius: 20;"
            AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="20.0" prefHeight="40.0">
        <font>
            <Font name="Arial Bold" size="16.0" />
        </font>
        <effect>
            <DropShadow radius="5.0" color="#FAF3E0" />
        </effect>
    </Button>
</AnchorPane>
